        DESCRICAO "CenaEntendimentoSobreHelloWorldEmCMaisMais"
    )

    CONHECIMENTO ConhecimentoCompilacaoDaLinguagemCMaisMais (
        LEMBRAR "Função de entrada main():int" CenaLembrancaSobreFuncaoDeEntradaMain
        ENTENDER "O que é um programa C++ deve minimamente possuir?" CenaEntendimentoSobreHelloWorldEmCMaisMais
        DESCRICAO "Para criar o primeiro programa em C++ deve-se primeiramente abrir o editor de textos à sua preferência e..."
    )

    CENA CenaLembrancaSobreOrdencaoDeValores (
        DESCRICAO "CenaEntendimentoSobreHelloWorldEmCMaisMais"
    )

    CENA CenaEntendimentoSobreFucaoOrdenacao (
        DESCRICAO "CenaEntendimentoSobreHelloWorldEmCMaisMais"
    )

    CONHECIMENTO ConhecimentoFuncaoDeOrdenacao (
        REQUISITO (
            ConhecimentoLinguagemCMaisMais
            ConhecimentoBibliotecaPadrao
        )
        LEMBRAR "std:sort(vBegin vEnd)" CenaLembrancaSobreOrdencaoDeValores
        ENTENDER "O que faz a função de ordenação?" CenaEntendimentoSobreFucaoOrdenacao
        DESCRICAO "A partir do C++ 11 está disponível na biblioteca padrão a função sort que recebe..."
    )

    CENA CenaLembrancaSobreIostreamIfstream (
        DESCRICAO "CenaEntendimentoSobreHelloWorldEmCMaisMais"
    )

    CENA CenaLembrancaSobreIostreamOfstream (
        DESCRICAO "CenaEntendimentoSobreHelloWorldEmCMaisMais"
    )

    CENA CenaEntendimentoSobreLeituraDeArquivo (
        DESCRICAO "CenaEntendimentoSobreHelloWorldEmCMaisMais"
    )

    CONHECIMENTO ConhecimentoLeituraDeArquivos (
        REQUISITO (
            ConhecimentoLinguagemCMaisMais
        )
        LEMBRAR "iostream:ifstream" CenaLembrancaSobreIostreamIfstream
        LEMBRAR "iostream:ofstream" CenaLembrancaSobreIostreamOfstream
        ENTENDER "Qual é a classe que efetua a leitura do arquivo?" CenaEntendimentoSobreLeituraDeArquivo
        DESCRICAO "Em C++ a entrada e saída de arquivos é feita utilizando respectivamente as classes ifstream e ofstream da biblioteca iostream.h cuja..."
    )

    CENA CenaLembrancaSobreComandoCin (
        DESCRICAO "CenaLembrancaSobreComandoCin"
    )

    CENA CenaLembrancaSobreComandoCout (
        DESCRICAO "CenaLembrancaSobreComandoCout"
    )

